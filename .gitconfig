# vim: noexpandtab nosmarttab sw=8 ts=8
[user]
	signingKey = ~/.ssh/id_ed25519.pub
[core]
	editor = vim
[diff]
	tool = vimdiff
[merge]
	conflictstyle = diff3
[init]
	defaultBranch = main
[pull]
	rebase = true
[fetch]
	prune = true
[gpg]
	format = ssh
[commit]
	gpgsign = true
[status]
	showStash = true
[alias]
	lg = log --decorate --oneline --graph
	alg = log --all --decorate --oneline --graph

	b = branch
	sw = switch
	swc = switch -c

	st = status
	ss = status -s

	d = diff
	dc = diff --cached
	dcw = diff --cached --word-diff

	c = commit -v
	ca = commit -v -a
	cm = commit -m

	p = push
	pv = push -v
	pd = push --dry-run
	pf = push --force-with-lease
	pff = push --force

	up = pull --rebase
	upv = pull --rebase -v
	upa = pull --rebase --autostash

	rb = rebase
	rba = rebase --abort
	rbc = rebase --continue
	rbi = rebase -i
